<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Results">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/input_field"
            android:text="@string/app_intro_back_button"
            app:layout_constraintEnd_toEndOf="@+id/req_panel"
            app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintStart_toStartOf="@+id/req_panel"
            app:layout_constraintTop_toBottomOf="@+id/req_panel" />

        <TextView
            android:id="@+id/total_watt_hr_day"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/input_field"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/kilo_watt_per_month"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/input_field"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="@+id/total_watt_hr_day"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/total_watt_hr_day"
            app:layout_constraintTop_toBottomOf="@+id/total_watt_hr_day" />

        <TextView
            android:id="@+id/avg_sunlight_per_month"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/input_field"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="@+id/kilo_watt_per_month"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/kilo_watt_per_month"
            app:layout_constraintTop_toBottomOf="@+id/kilo_watt_per_month" />

        <TextView
            android:id="@+id/req_panel"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/input_field"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/rec_num_solar_panel"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/rec_num_solar_panel"
            app:layout_constraintTop_toBottomOf="@+id/rec_num_solar_panel" />

        <TextView
            android:id="@+id/rec_num_solar_panel"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/input_field"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/avg_sunlight_per_month"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/avg_sunlight_per_month"
            app:layout_constraintTop_toBottomOf="@+id/avg_sunlight_per_month" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="casual"
            android:text="@string/khpm"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:layout_constraintBottom_toTopOf="@+id/kilo_watt_per_month"
            app:layout_constraintEnd_toEndOf="@+id/kilo_watt_per_month"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="@+id/kilo_watt_per_month" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="casual"
            android:text="@string/twhpd"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:layout_constraintBottom_toTopOf="@+id/total_watt_hr_day"
            app:layout_constraintEnd_toEndOf="@+id/total_watt_hr_day"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="@+id/total_watt_hr_day" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="casual"
            android:text="@string/aspm"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:layout_constraintBottom_toTopOf="@+id/avg_sunlight_per_month"
            app:layout_constraintEnd_toEndOf="@+id/avg_sunlight_per_month"
            app:layout_constraintStart_toStartOf="@+id/avg_sunlight_per_month" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="casual"
            android:text="@string/rsp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:layout_constraintBottom_toTopOf="@+id/rec_num_solar_panel"
            app:layout_constraintEnd_toEndOf="@+id/rec_num_solar_panel"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="@+id/rec_num_solar_panel" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:fontFamily="casual"
            android:text="@string/rrr"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:layout_constraintBottom_toTopOf="@+id/req_panel"
            app:layout_constraintEnd_toEndOf="@+id/req_panel"
            app:layout_constraintStart_toStartOf="@+id/req_panel" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>