<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffd500"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent_const_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_avg_sunlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="58dp"
            android:text="@string/avg_sunlight_day"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/edt_avg_sunlight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_avg_sunlight"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/input_field_decoration"
            android:ems="10"
            android:hint="@string/_0"
            android:importantForAutofill="no"
            android:inputType="number"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_avg_sunlight"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_quantity"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_field_decoration"
            android:ems="10"
            android:hint="@string/_0"
            android:importantForAutofill="no"
            android:inputType="number"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/quantity_txt"
            app:layout_constraintStart_toStartOf="@+id/quantity_txt"
            app:layout_constraintTop_toBottomOf="@+id/quantity_txt" />

        <EditText
            android:id="@+id/edit_watts"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_field_decoration"
            android:ems="10"
            android:hint="@string/_0"
            android:importantForAutofill="no"
            android:inputType="number"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/watts_txt"
            app:layout_constraintStart_toStartOf="@+id/watts_txt"
            app:layout_constraintTop_toBottomOf="@+id/watts_txt" />

        <EditText
            android:id="@+id/edit_hrs"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_field_decoration"
            android:ems="10"
            android:hint="@string/_0"
            android:importantForAutofill="no"
            android:inputType="number"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/hrs_txt"
            app:layout_constraintStart_toStartOf="@+id/hrs_txt"
            app:layout_constraintTop_toBottomOf="@+id/hrs_txt" />

        <EditText
            android:id="@+id/edit_text_appliance_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/input_field_decoration"
            android:ems="10"
            android:hint="@string/input_appliance_name"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/edt_avg_sunlight"
            app:layout_constraintStart_toStartOf="@+id/txt_avg_sunlight"
            app:layout_constraintTop_toBottomOf="@+id/txt_avg_sunlight" />

        <TextView
            android:id="@+id/quantity_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/quantity"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/edit_text_appliance_name"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_appliance_name" />

        <TextView
            android:id="@+id/hrs_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/hrs_day"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/edit_text_appliance_name"
            app:layout_constraintStart_toEndOf="@+id/watts_txt"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_appliance_name" />

        <TextView
            android:id="@+id/watts_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:text="@string/watts"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/hrs_txt"
            app:layout_constraintStart_toEndOf="@+id/quantity_txt"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_appliance_name" />

        <Button
            android:id="@+id/add_an_appliance_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@android:color/black"
            android:drawableStart="@drawable/ic_add"
            android:paddingStart="40dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="@string/add_an_appliance"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/reset_btn"
            app:layout_constraintEnd_toEndOf="@+id/edit_hrs"
            app:layout_constraintStart_toStartOf="@+id/edit_quantity"
            app:layout_constraintTop_toBottomOf="@+id/edit_quantity"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/reset_btn_decoration"
            android:text="@string/reset"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/add_an_appliance_btn"
            app:layout_constraintStart_toStartOf="@+id/add_an_appliance_btn"
            app:layout_constraintTop_toBottomOf="@+id/add_an_appliance_btn" />

        <Button
            android:id="@+id/calculate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/calc_btn_decor"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/calculate_the_total_power_needed"
            app:layout_constraintEnd_toEndOf="@+id/reset_btn"
            app:layout_constraintStart_toStartOf="@+id/reset_btn"
            app:layout_constraintTop_toBottomOf="@+id/reset_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>